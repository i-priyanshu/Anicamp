<%- include ("../partials/header") %>
    <div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Create a New Post</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
    <form action="/campgrounds" method="POST">
        <div class="form-group"> 
            <input class="form-control" type="text" name = "name" placeholder="name">
        </div>
        <div class="form-group"> 
            <input class="form-control" type="text" name = "price" placeholder="Price" min ="0.01" step="0.01">
        </div>
        <div class="form-group">
            <input class="form-control" type="text"  name ="image" placeholder = "image">
        </div>
        <div class="form-group">
            <input class="form-control" type="text"  name ="desc" placeholder = "description">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/campgrounds">GO BACK!</a>
        </div>   
    </div>
<%- include ("../partials/footer") %>
